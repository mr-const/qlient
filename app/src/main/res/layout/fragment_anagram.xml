        android:id="@+id/anagram_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/anagram_input_hint"
        android:inputType="text"/>
    <ListView
        android:id="@+id/street_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>